<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/small_gap_2"
    tools:context=".fragment.ProjectInfoFragment">

    <include layout="@layout/layout_base_for_splash" />

    <TextView
        android:id="@+id/firstLineTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap_2"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:text="@string/project_description"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/secondLineTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/financedTextView"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/secondLineTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_gap_8"
        android:gravity="center_horizontal"
        android:text="@string/project_partners"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/middleImageLineFlow"
        app:layout_constraintEnd_toEndOf="@id/firstLineTextView"
        app:layout_constraintStart_toStartOf="@id/firstLineTextView"
        app:layout_constraintTop_toBottomOf="@id/firstLineTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>
