<resources>

    <!-- Widget -->

    <style name="Widget.ColorApp.Button" parent="Widget.Material3.Button.TonalButton" />

    <style name="Widget.ColorApp.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/lightOrange</item>
        <item name="android:padding">@dimen/small_gap_2</item>
        <item name="backgroundTint">@color/lavender_alpha_50</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/size_button_icon_medium</item>
    </style>

    <style name="Widget.ColorApp.TextView.Title" parent="Theme.ColorApp">
        <item name="layout_constraintHeight_max">@dimen/size_title_text_max</item>
        <item name="layout_constraintHeight_min">@dimen/size_title_text_min</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textAppearance">@style/TextAppearance.ColorApp.Title</item>
    </style>

    <!-- TextAppearance -->

    <style name="TextAppearance.ColorApp" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/lightOrange</item>
    </style>

    <style name="TextAppearance.ColorApp.Title" parent="TextAppearance.ColorApp">
        <item name="android:autoSizeMaxTextSize">@dimen/text_size_title_max</item>
        <item name="android:autoSizeMinTextSize">@dimen/text_size_title_min</item>
    </style>

</resources>
