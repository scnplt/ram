<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <!-- Fragments -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.sertan.android.ram.appcolor.screen.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailBottomSheet"
            app:destination="@id/detailBottomSheet" />
    </fragment>

    <fragment
        android:id="@+id/questionFragment"
        android:name="dev.sertan.android.ram.appcolor.screen.question.QuestionFragment"
        android:label="QuestionFragment"
        tools:layout="@layout/fragment_question" />

    <fragment
        android:id="@+id/trainingFragment"
        android:name="dev.sertan.android.ram.appcolor.screen.training.TrainingFragment"
        android:label="TrainingFragment"
        tools:layout="@layout/fragment_training">
        <action
            android:id="@+id/action_trainingFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>

    <!-- Dialog Fragments -->
    <dialog
        android:id="@+id/detailBottomSheet"
        android:name="dev.sertan.android.ram.appcolor.screen.home.DetailBottomSheet"
        android:label="DetailBottomSheet"
        tools:layout="@layout/bottom_sheet_detail">
        <action
            android:id="@+id/action_detailBottomSheet_to_questionFragment"
            app:destination="@id/questionFragment" />
        <action
            android:id="@+id/action_detailBottomSheet_to_trainingFragment"
            app:destination="@id/trainingFragment" />
        <argument
            android:name="duration"
            android:defaultValue="5"
            app:argType="integer" />
        <argument
            android:name="isQuestionButtonActive"
            android:defaultValue="false"
            app:argType="boolean" />
    </dialog>

</navigation>
