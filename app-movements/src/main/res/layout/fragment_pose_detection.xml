<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".posedetection.PoseDetectionFragment">

    <TextureView
        android:id="@+id/cameraTextureView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/small_gap_2"
        app:layout_constraintBottom_toTopOf="@id/changeCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <dev.sertan.android.ram.appmovements.posedetection.LandmarkGraphView
        android:id="@+id/landmarkGraphView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/cameraTextureView"
        app:layout_constraintEnd_toEndOf="@id/cameraTextureView"
        app:layout_constraintStart_toStartOf="@id/cameraTextureView"
        app:layout_constraintTop_toTopOf="@id/cameraTextureView" />

    <Button
        android:id="@+id/changeCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/small_gap_2"
        android:text="Change Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/startStopDetection"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/startStopDetection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="@id/changeCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/changeCamera"
        app:layout_constraintTop_toTopOf="@id/changeCamera" />
</androidx.constraintlayout.widget.ConstraintLayout>
